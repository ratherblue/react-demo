# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

# 4 space indentation
[*.{js}]
indent_size = 4

[{.babel.json,.eslint.json}]
indent_size = 4

# 2 space indentation
[{.travis.yml,package.json}]
indent_size = 2
